#include <stdio.h>
#include <string.h>
#include <stdint.h>
#include "stm32f4xx.h"
#include "uart2.h"

#define GPIOAEN (1U << 0)
#define PIN5    (1U << 5)
#define SR_RXNE     (1U << 5)

#define LED     PIN5

char rx_buff[10];
int index = 0;

void uart2_readString()
{
	char receivedChar;
	while(!(USART2->SR & SR_RXNE)){}
	receivedChar = USART2->DR;
	if(receivedChar == '\n' || receivedChar == '\r')
	{
		rx_buff[index] = '\0';
		index = 0;
		break;
	}
	else if(index < sizeof(rx_buff)-1)
	{
		rx_buff[index++] = receivedChar;
	}

}

int main(void)
{
	RCC->AHB1ENR |= GPIOAEN;
	GPIOA->MODER |= (1U << 10);
	GPIOA->MODER &= ~(1U << 11);
	UART2_Init();

	while(1)
	{
		uart2_readString();
		if(strcmp(rx_buff, "LED_ON") == 0)
		{
			GPIOA->ODR |= LED;
		}
		else if(strcmp(rx_buff, "LED_OFF") == 0)
		{
			GPIOA->ODR &= ~(LED);
		}
	}
}



